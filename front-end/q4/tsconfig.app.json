{
  "extends": "@vue/tsconfig",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ],
  "filesGlob": [
    "**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types", "src"]
  }
}
